<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SanctuaryActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="-30dp"
        app:cardCornerRadius="50dp"
        android:id="@+id/bird"
        app:cardBackgroundColor="#FFF8E1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/birds"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center">
        </TextView>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bird"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:id="@+id/crow"
                android:clickable="true"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/crow"
                        android:contentDescription="TODO">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="#DFFFD8"
                        android:text="@string/crow"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eagle"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/eagle">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Eagle"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                android:id="@+id/hen"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/hen">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Hen"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                android:id="@+id/macaw"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/macaw">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/macaw"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:id="@+id/owl"
                android:clickable="true"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/owl"
                        android:contentDescription="TODO">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Owl"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:id="@+id/parrot"
                android:clickable="true"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/parrot"
                        android:contentDescription="TODO">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Parrot"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                android:id="@+id/peacock"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/peacock"
                        android:contentDescription="TODO">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Peacock"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                android:id="@+id/pigeon"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pigeon"
                        android:contentDescription="TODO">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Pigeon"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                android:id="@+id/sparrow"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sparrow"
                        android:contentDescription="@string/todo1">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Sparrow"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFE6F7"
                android:clickable="true"
                android:layout_marginBottom="15dp"
                android:id="@+id/vulture"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/vulture"
                        android:contentDescription="@string/todo">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Vulture"
                        android:background="#DFFFD8"
                        android:textAlignment="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>